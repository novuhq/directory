{
  "name": "directory",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:all": "pnpm build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "update-deps": "pnpm update --recursive",
    "update-novu": "pnpm update @novu/js @novu/nextjs @novu/react --filter=@directory/shared-deps",
    "install-deps": "pnpm install --recursive",
    "setup-env": "node scripts/setup-env.js"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "lucide-react": "^0.454.0",
    "vaul": "^0.9.6"
  }
}
